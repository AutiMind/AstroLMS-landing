---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import BlogListing from '../components/BlogListing';
import { Toaster } from 'react-hot-toast';
---

<Layout title="Blog - AstroLMS | Revolutionary Learning Insights">
  <div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 relative overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute top-1/2 -left-40 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-float"></div>
      <div class="absolute -bottom-40 right-1/4 w-64 h-64 bg-indigo-500/10 rounded-full blur-3xl animate-pulse-slow"></div>
    </div>
    
    <!-- Animated particles -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 left-1/4 w-1 h-1 bg-blue-400 rounded-full animate-twinkle"></div>
      <div class="absolute top-1/3 right-1/3 w-1 h-1 bg-purple-400 rounded-full animate-twinkle" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-1/4 left-1/3 w-1 h-1 bg-indigo-400 rounded-full animate-twinkle" style="animation-delay: 2s;"></div>
      <div class="absolute top-2/3 right-1/4 w-1 h-1 bg-cyan-400 rounded-full animate-twinkle" style="animation-delay: 3s;"></div>
    </div>

    <Header client:load />
    
    <!-- Blog Hero Section -->
    <section class="pt-24 pb-16 relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-5xl md:text-7xl font-bold bg-gradient-to-r from-blue-400 via-purple-400 to-indigo-400 bg-clip-text text-transparent mb-6 animate-glow">
            Learning Insights
          </h1>
          <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Explore the future of education with AI-powered learning insights, industry trends, and revolutionary ideas that are reshaping how we learn.
          </p>
          <div class="mt-8 flex justify-center">
            <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full"></div>
          </div>
        </div>
      </div>
    </section>

    <BlogListing client:load />
    <Footer client:load />
    
    <Toaster 
      position="top-right"
      toastOptions={{
        duration: 4000,
        style: {
          background: '#1f2937',
          color: '#f9fafb',
          border: '1px solid #374151',
        },
      }}
      client:load
    />
  </div>
</Layout>