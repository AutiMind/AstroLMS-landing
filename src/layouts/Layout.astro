---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Transform education with AstroLMS - the next-generation AI-powered learning management system designed for modern institutions and learners." />
    <meta name="keywords" content="LMS, learning management system, AI education, EdTech, online learning, educational technology" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta property="og:title" content="AstroLMS - Revolutionary Learning Management System" />
    <meta property="og:description" content="Transform education with AstroLMS - the next-generation AI-powered learning management system designed for modern institutions and learners." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://astrolms.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>